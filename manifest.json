{
  "manifest_version": 3,
  "name": "SNS Auto Loader",
  "version": "1.0",
  "description": "Xのページを自動リロードする拡張",
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}